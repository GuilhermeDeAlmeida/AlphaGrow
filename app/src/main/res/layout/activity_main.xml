<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textViewUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/bem_vindo"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#303f9f"
        android:orientation="vertical"
        android:paddingBottom="@dimen/component_size"
        android:paddingTop="@dimen/component_size">

        <TextView
            android:id="@+id/textViewPlantaCiclo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/ciclo"
            android:textColor="@android:color/background_light" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:max="100"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:progress="80" />

        <TextView
            android:id="@+id/textViewDiasCiclo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/colheita"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#C0C0C0"
        android:baselineAligned="false"
        android:onClick="redirecionarParaTemperatura"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/component_padding"
        android:paddingTop="@dimen/component_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#C0C0C0"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/temperatura" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTemperatura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/generic1"
                    android:textSize="@dimen/current_status" />

                <ImageView
                    android:id="@+id/imageViewIndicadorTemperatura"
                    android:layout_width="@dimen/metric_icon_size"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:contentDescription="Indicador de sinalizacao"
                    app:srcCompat="@drawable/double_arrow_down" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#C0C0C0"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/umidade" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewHumidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/generic2"
                    android:textSize="@dimen/current_status" />

                <ImageView
                    android:id="@+id/imageViewIndicadorHumidade"
                    android:layout_width="@dimen/metric_icon_size"
                    android:layout_height="@dimen/metric_icon_size"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/arrow_down" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#C0C0C0"
        android:gravity="center"
        android:onClick="redirecionarParaIndicePH"
        android:orientation="vertical"
        android:paddingBottom="@dimen/component_padding"
        android:paddingTop="@dimen/component_padding">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/indice_ph" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewIndicePH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/generic2"
                android:textSize="@dimen/current_status" />

            <ImageView
                android:id="@+id/imageViewIndicadorPH"
                android:layout_width="@dimen/metric_icon_size"
                android:layout_height="@dimen/metric_icon_size"
                android:layout_weight="1"
                app:srcCompat="@drawable/double_arrow_up" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#C0C0C0"
        android:gravity="center"
        android:onClick="redirecionarParaIluminacao"
        android:orientation="vertical"
        android:paddingBottom="@dimen/component_padding"
        android:paddingTop="@dimen/component_padding"
        android:weightSum="25">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/iluminacao" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewIlucminacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/generic3"
                android:textSize="@dimen/current_status" />

            <ImageView
                android:id="@+id/imageViewIndicadorIluminacao"
                android:layout_width="@dimen/metric_icon_size"
                android:layout_height="@dimen/metric_icon_size"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/arrow_up" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>